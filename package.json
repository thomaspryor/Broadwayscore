{
  "name": "broadway-scorecard",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "prebuild": "node scripts/validate-shows-prebuild.js && node scripts/generate-commercial-export.js",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "test": "npm run test:data && npm run test:e2e",
    "test:data": "node scripts/validate-data.js && node scripts/validate-aggregator-truth.js",
    "test:aggregator": "node scripts/validate-aggregator-truth.js",
    "test:e2e": "npx playwright test",
    "test:e2e:ui": "npx playwright test --ui",
    "test:unit": "node --test 'tests/unit/*.test.mjs'",
    "agent:update": "npx ts-node --project scripts/tsconfig.json scripts/agent-update.ts",
    "agent:report": "npx ts-node --project scripts/tsconfig.json scripts/agent-update.ts",
    "reviews:fetch": "npx ts-node --project scripts/tsconfig.json scripts/critic-reviews-agent/index.ts",
    "reviews:report": "npx ts-node --project scripts/tsconfig.json scripts/critic-reviews-agent/index.ts --report",
    "reviews:show": "npx ts-node --project scripts/tsconfig.json scripts/critic-reviews-agent/index.ts --show",
    "reviews:all": "npx ts-node --project scripts/tsconfig.json scripts/critic-reviews-agent/index.ts --all",
    "reviews:status": "npx ts-node --project scripts/tsconfig.json scripts/critic-reviews-agent/status.ts",
    "reviews:validate": "npx ts-node --project scripts/tsconfig.json scripts/critic-reviews-agent/validate.ts",
    "llm:score": "npx ts-node --project scripts/tsconfig.json scripts/llm-scoring/index.ts",
    "llm:score:show": "npx ts-node --project scripts/tsconfig.json scripts/llm-scoring/index.ts --show",
    "llm:score:all": "npx ts-node --project scripts/tsconfig.json scripts/llm-scoring/index.ts --all",
    "llm:ensemble": "npx ts-node --project scripts/tsconfig.json scripts/llm-scoring/index.ts --ensemble",
    "llm:calibrate": "npx ts-node --project scripts/tsconfig.json scripts/llm-scoring/index.ts --calibrate-only",
    "llm:validate": "npx ts-node --project scripts/tsconfig.json scripts/llm-scoring/index.ts --validate-only",
    "llm:ground-truth": "npx ts-node --project scripts/tsconfig.json scripts/llm-scoring/index.ts --ground-truth",
    "llm:evaluate": "npx ts-node --project scripts/tsconfig.json scripts/llm-scoring/evaluate.ts",
    "llm:status": "npx ts-node --project scripts/tsconfig.json scripts/llm-scoring/status.ts",
    "reviews:collect": "node scripts/collect-review-texts.js",
    "reviews:coverage": "node scripts/analyze-review-coverage.js",
    "consensus": "node scripts/generate-critic-consensus.js",
    "consensus:force": "node scripts/generate-critic-consensus.js --force"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.71.2",
    "@google/generative-ai": "^0.24.1",
    "@vercel/analytics": "^1.6.1",
    "@vercel/og": "^0.8.6",
    "next": "14.2.3",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@playwright/test": "^1.58.0",
    "@types/node": "^20.12.12",
    "@types/react": "^18.3.2",
    "@types/react-dom": "^18.3.0",
    "autoprefixer": "^10.4.19",
    "axios": "^1.6.7",
    "eslint": "^8.57.0",
    "eslint-config-next": "14.2.3",
    "jsdom": "^27.4.0",
    "playwright": "^1.58.0",
    "playwright-extra": "^4.3.6",
    "postcss": "^8.4.38",
    "puppeteer-extra-plugin-stealth": "^2.11.2",
    "tailwindcss": "^3.4.3",
    "ts-node": "^10.9.2",
    "tsx": "^4.21.0",
    "typescript": "^5.4.5"
  }
}
